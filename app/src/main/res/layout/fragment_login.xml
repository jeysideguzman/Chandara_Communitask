<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbkg"
    tools:context=".fragments.CreateAccountFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_above="@id/login"
        android:text="Welcome!"

        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_above="@id/ll1"
        android:layout_marginBottom="40dp"
        android:text="Login"
        android:textColor="@color/gray"
        android:textSize="32sp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="424dp"
        android:layout_height="225dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/hands1" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <EditText
            android:id="@+id/emailET"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:background="@drawable/text_box"
            android:drawableLeft="@drawable/emailicon"
            android:drawablePadding="12dp"
            android:hint="Email"
            android:padding="12dp" />

        <EditText
            android:id="@+id/passwordET"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:background="@drawable/text_box"
            android:drawableLeft="@drawable/passicon"
            android:drawablePadding="12dp"
            android:hint="Password"
            android:padding="12dp" />

        <TextView
            android:id="@+id/forgotTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            android:text="Forgot Password"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_below="@id/ll1"
        android:layout_above="@id/loginBtn"/>


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="20dp"

        android:background="@drawable/btnbkg"
        android:layout_centerHorizontal="true"
        android:text="LOGIN"

        android:textColor="#fff" />

    <Button
            android:id="@+id/googleSignInBtn"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:text="Sign In with google"
            android:layout_marginStart="32dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btnbkg"
            android:layout_marginEnd="32dp"
            android:layout_below="@id/loginBtn"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:textColor="#fff"/>


    <TextView
        android:id="@+id/signUpTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/googleSignInBtn"
        android:layout_marginTop="2dp"
        android:text="New user? Create Account" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/lexend_tera"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="C O M M U N I T A S K" />

</RelativeLayout>